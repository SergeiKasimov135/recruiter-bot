<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/recruiterbot.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="ru.kasimov.recruiterbot" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>
